<div class="col-lg-10 mx-auto mt-5">
  <div class="card mb-5"> 
    <div class="row">
      <div class="col-lg-4">
        <%= image_tag @product.image, class: "img-fluid"%>
      </div>
      <div class="col-lg-8">
        <div class="card-body">
          <h3 class="fw-bold"><%= @product.name %></h3>
          <p class="lead"><%=@product.description%></p>
          <p class="lead"><%=@product.price%></p>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div>
          <%= form_with url: add_item_to_user_cart_cart_path, method: :post, remote: true do |f| %>
            <div class="d-flex bd-highlight">
              <div class="p-2 flex-grow-1 bd-highlight">
                <%= f.hidden_field :product_id, value: @product.id %>
                <%= f.label :quantity, "Quantidade" %>
                <%= f.number_field :quantity, value: 1, min: 1%>
              </div>
              <div class="p-2 bd-highlight"><%= f.submit "Adicionar ao Carrinho", class: "btn btn-primary" %></div>
            </div>           
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>